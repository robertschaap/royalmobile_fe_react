{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "react-app",
    "airbnb-base"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "arrow-body-style": "off",
    "camelcase": "off",
    "max-len": "off",
    "no-param-reassign": ["error", {
      "props": true,
      "ignorePropertyModificationsFor": ["newState"]
    }]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "rules": {
      }
    }
  ]
}
